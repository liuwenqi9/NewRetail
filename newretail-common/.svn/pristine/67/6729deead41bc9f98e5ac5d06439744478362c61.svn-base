public class TextUtils {

    /**
     * 判断字符串是否为空
     * @param 字符串
     * @return boolean
     */
    public static boolean isEmpty(CharSequence str) {
        if (str == null || str.length() == 0)
            return true;
        else
            return false;
    }
    
    /**
     * 判断数字是否为空
     * @param 传入数字Integer类型的
     * @return 为空或0
     */
    public static boolean isEmpty(Integer num) {
        if (num == null || num == 0)
            return true;
        else
            return false;
    }
}

